;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "csvtable")
  ;; Library version
  (version "1.0.0")
  ;; Files
  (sources
    ((packageDir "src")))
  ;; OPAM package file
  (opam "satysfi-csvtable.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
     (base ()) ; Base library
     (csv ())
     (easytable ())
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "csvtable-doc")
  ;; Library version
  (version "1.0.0")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "manual.saty" "-o" "csvtable-manual-ja")))
  ;; Files
  (sources
    ((doc "csvtable-manual-ja" "doc/csvtable-manual-ja")))
  ;; OPAM package file
  (opam "satysfi-csvtable-doc.opam")
  ;; Dependency
  (dependencies
    ((csvtable ()) ; the main library
     (dist ()) ; Standard library
     (base ()) ; Base library
     (csv ())
     (easytable ())
    )))
